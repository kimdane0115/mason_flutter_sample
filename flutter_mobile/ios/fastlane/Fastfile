      # firebase distribute
      firebase_app_distribution(
        app: "1:753175679683:ios:8ed4dde72ce557e476c876",
        ipa_path: "../build/ios/ipa/í”ŒëŸ¬í„°ëª¨ë°”ì¼.ipa",
        groups: "ios"
      )

      # Send slack message
      # after_send_slack_message(msg: "ğŸš€ Successfully distributed a new beta build âœ¨")
    ensure #finally
      # ì•± ì•„ì´ì½˜ ì´ë¯¸ì§€ ì´ˆê¸°í™”
      # icon_initialize
